# ===========================================
# VK-to-Telegram Configuration
# ===========================================

# === VK API ===
VK_API_TOKEN=your_vk_api_token_here

# === Telegram API ===
API_ID=your_telegram_api_id
API_HASH=your_telegram_api_hash
SESSION_NAME=your_telegram_session_name

# === Telegram Channels ===
PUBLIC_TG_CHANNEL_ID=@your_public_channel
PRIVATE_TG_CHANNEL_ID=your_private_channel_id

# === AI Providers ===
AI_PROVIDER=gigachat
GIGA_CHAT_TOKEN=your_gigachat_token_here
DEEPSEEK_TOKEN=your_deepseek_token_here

# === ML Models ===
LOCAL_BERT_VECTOR_MODEL_PATH=/path/to/your/sentence-transformer-model

# === Database ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# === Optional Settings ===
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token  # Если используете aiogram
# DEBUG=False
# AI_DISABLED=False
# SEMANTIC_THRESHOLD=0.95